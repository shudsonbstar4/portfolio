<div class="row">
	<h2>Dashboard</h2>
	<br />
</div><!--ROW-->

<div class="row">
	<div class="col-md-3 sidebar">
		<h4>Projects</h4>
			<ul class="nav nav-tabs nav-stacked text-center">
				<li><%= link_to "Add New Project", new_project_path %></li>
			</ul>
		<br />
		<h4>Blogs</h4>
			<ul class="nav nav-tabs nav-stacked text-center">
				<li><%= link_to "Add New Blog Post", new_blog_path %></li>
			</ul>
	</div> <!--END COL 3-->
	<div class="col-md-9">
		<div class="row">
			
			<% @projects.each do |project| %>
				<div class="col-md-4">
					<div class="square"></div>
					<br />
					<div class="row text-center"><h3><%= link_to project.title, project %><h3></div>
					<div class="row text-center"><%= project.description %></div>	
					<br />
					<div class="row text-center"><%= link_to "Edit", edit_project_path(project) %> | <%= link_to "Delete", project, method: :delete, data: { confirm: 'Are you sure?' } %></div>
				</div>
			<% end %>
			
		</div> <!--END ROW-->
		
		
	</div><!--END COL 9 -->

			
</div><!--END ROW-->
